{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": false,
    "rootDir": "./src",
    "outDir": "./build",
    "watch": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "static"
  ]
}